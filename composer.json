{
    "name": "yiisoft/files",
    "type": "library",
    "description": "",
    "keywords": [
        "files"
    ],
    "homepage": "http://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/files/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/files"
    },
    "require": {
        "php": "^7.4|^8.0",
        "yiisoft/strings": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "roave/infection-static-analysis-plugin": "^1.3",
        "vimeo/psalm": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Files\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Files\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": [
            "phpunit --colors --no-interaction"
        ]
    }
}
